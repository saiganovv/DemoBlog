<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/kendo/2013.2.716/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2013.2.716/kendo.default.min.css" rel="stylesheet" />
    <link href="../../Content/toastr.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="navbar navbar-inner">
        <div class="container-fluid">
            @Html.ActionLink("MyBlog", "Index", "Home", null, new { @class = "brand" })
            @Html.Partial("_LoginPartial")
            <div class="float-right">
                <nav class="pull-right">
                    <ul class="nav nav-tabs">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer class="navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="float-left">
                <p>
                    &copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>
    <script src="../../Scripts/jquery-2.0.3.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/kendo/2013.2.716/kendo.web.min.js"></script>
    <script src="~/Scripts/knockout-2.3.0.js"></script>
    <script src="../../Scripts/toastr.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/custom")
</html>

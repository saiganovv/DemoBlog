@model IEnumerable<Blog.Models.UserProfile>
@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            Options
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "btn" })
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "btn" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "btn" })
                </div>
            </td>
        </tr>
    }
</table>

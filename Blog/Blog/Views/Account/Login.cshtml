@model Blog.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <ul>
            <li class="input-prepend"><span class="add-on">Insert your login: </span>
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "example" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <br />
            <li class="input-prepend"><span class="add-on">Insert your pass: </span>
                @Html.PasswordFor(m => m.Password, new { placeholder = "qwert" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <br />
            <li class="input-prepend">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                <p class="btn">Remember?</p>
            </li>
        </ul>
        <p class="btn-group">
            <input class="btn btn-primary btn" type="submit" value="Log in" />
            @Html.ActionLink("Register", "Register", null, new { @class = "btn" })
        </p>

    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
